---
{% if prometheus_scraper_memcached | bool and groups[prometheus_scraper_memcached_groupname] is defined %}
{% for host in groups[prometheus_scraper_memcached_groupname] %}
{% if hostvars[host]['prometheus_scraper_interface'] is defined and hostvars[host]['ansible_' + hostvars[host]['prometheus_scraper_interface']] is defined %}
- targets:
  - {{ hostvars[host]['ansible_' + hostvars[host]['prometheus_scraper_interface']]['ipv4']['address'] }}:{{ prometheus_scraper_proxy_port }}
  labels:
    instance: {{ hostvars[host]['inventory_hostname_short'] }}
    job: memcached
{% endif %}
{% endfor %}
{% endif %}
