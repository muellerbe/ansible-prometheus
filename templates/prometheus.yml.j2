---
global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets:
          - {{ prometheus_host }}:{{ prometheus_port }}

{% if prometheus_scraper_elasticsearch | bool %}
  - job_name: elasticsearch
    metrics_path: "/_prometheus/metrics"
    static_configs:
      - targets:
{% for host in groups[prometheus_scraper_elasticsearch_groupname] %}
          - {{ hostvars[host]['ansible_' + hostvars[host]['prometheus_scraper_elasticsearch_interface']|default(prometheus_scraper_elasticsearch_interface)]['ipv4']['address'] }}:{{ prometheus_scraper_elasticsearch_port }}
{% endfor %}
{% endif %}

{% if prometheus_scraper_rabbitmq | bool %}
  - job_name: rabbitmq
    metrics_path: "/api/metrics"
    static_configs:
      - targets:
{% for host in groups[prometheus_scraper_rabbitmq_groupname] %}
          - {{ hostvars[host]['ansible_' + hostvars[host]['prometheus_scraper_rabbitmq_interface']|default(prometheus_scraper_rabbitmq_interface)]['ipv4']['address'] }}:{{ prometheus_scraper_rabbitmq_port }}
{% endfor %}
{% endif %}

{% if prometheus_scraper_node | bool %}
  - job_name: node
    static_configs:
      - targets:
{% for host in groups[prometheus_scraper_node_groupname] %}
          - {{ hostvars[host]['ansible_' + hostvars[host]['prometheus_scraper_node_interface']|default(prometheus_scraper_node_interface)]['ipv4']['address'] }}:{{ prometheus_scraper_node_port }}
{% endfor %}
{% endif %}

{% if prometheus_scraper_memcached | bool %}
  - job_name: memcached
    static_configs:
      - targets:
{% for host in groups[prometheus_scraper_memcached_groupname] %}
          - {{ hostvars[host]['ansible_' + hostvars[host]['prometheus_scraper_memcached_interface']|default(prometheus_scraper_memcached_interface)]['ipv4']['address'] }}:{{ prometheus_scraper_memcached_port }}
{% endfor %}
{% endif %}
