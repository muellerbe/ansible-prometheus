---
global:
  scrape_interval: {{ prometheus_scrape_interval }}
  scrape_timeout: {{ prometheus_scrape_timeout }}
  evaluation_interval: {{ prometheus_evaluation_interval }}

scrape_configs:

# prometheus scraper

  - job_name: prometheus-{{ inventory_hostname }}
    static_configs:
      - targets:
          - {{ prometheus_host }}:{{ prometheus_port }}
        labels:
          instance: {{ inventory_hostname }}

{% if prometheus_scraper_elasticsearch | bool %}
# elasticsearch scraper

{% for host in groups[prometheus_scraper_elasticsearch_groupname] %}

  - job_name: elasticsearch-{{ host }}
    metrics_path: "/_prometheus/metrics"
    static_configs:
      - targets:
          - {{ hostvars[host]['ansible_' + hostvars[host]['prometheus_scraper_elasticsearch_interface']|default(prometheus_scraper_elasticsearch_interface)]['ipv4']['address'] }}:{{ prometheus_scraper_elasticsearch_port }}
        labels:
          instance: {{ host }}

{% endfor %}
{% endif %}

